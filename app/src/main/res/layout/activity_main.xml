<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learning.dath.takephoto.MainActivity">

    <Button
        android:id="@+id/dathButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="136dp"
        android:onClick="onClickLaunchCamera"
        android:text="Take Photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dathImageView" />

    <ImageView
        android:id="@+id/dathImageView"
        android:layout_width="167dp"
        android:layout_height="0dp"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toTopOf="@+id/dathButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
